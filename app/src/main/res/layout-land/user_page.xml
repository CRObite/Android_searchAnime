<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BACKGROUND">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            style="@style/BLOCK1"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp">
            <TextView

                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="BACK"
                style="@style/TEXT"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/back_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            style="@style/BLOCK1"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp">
            <TextView

                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="LogOut"
                style="@style/TEXT"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>


        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/user_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/person_icon" />

        <TextView
            android:id="@+id/user_nic"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            style="@style/BLOCK1"
            android:gravity="center"
            android:padding="10dp"
            android:text="user not registered"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_info_container"
        android:layout_below="@id/header"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape2"
        android:padding="5dp">


        <LinearLayout
            android:id="@+id/container_tv_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/BLOCK1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape1"
            android:padding="5dp">

            <TextView
                android:id="@+id/quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                style="@style/TEXT"
                android:textStyle="bold"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_text"
            style="@style/BLOCK1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape1"
            android:padding="5dp">

            <TextView
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Quit watching: "
                android:textStyle="bold"
                android:textSize="12sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/container_ova_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_tv_counter"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            style="@style/BLOCK1"
            android:background="@drawable/shape1"
            android:padding="5dp">

            <TextView
                android:id="@+id/watching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                style="@style/TEXT"
                android:textStyle="bold"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_text"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape1"
            style="@style/BLOCK1"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Watching: "
                style="@style/TEXT"
                android:textStyle="bold"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_ona_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_ova_counter"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            style="@style/BLOCK1"
            android:background="@drawable/shape1"
            android:padding="5dp">

            <TextView
                android:id="@+id/in_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                style="@style/TEXT"
                android:textStyle="bold"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:id="@+id/container_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_text2"
            style="@style/BLOCK1"
            android:background="@drawable/shape1"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="In the plans: "
                style="@style/TEXT"
                android:textStyle="bold"
                android:textSize="12sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/container_movie_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_ona_counter"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            style="@style/BLOCK1"
            android:background="@drawable/shape1"
            android:padding="5dp">

            <TextView
                android:id="@+id/viewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                style="@style/TEXT"
                android:textStyle="bold"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_text3"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            style="@style/BLOCK1"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape1"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Viewed: "
                style="@style/TEXT"
                android:textStyle="bold"
                android:textSize="12sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/container_special_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_movie_counter"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape1"
            style="@style/BLOCK1"
            android:padding="5dp">

            <TextView
                android:id="@+id/postponed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                style="@style/TEXT"
                android:textStyle="bold"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:id="@+id/container_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_text4"
            style="@style/BLOCK1"
            android:background="@drawable/shape1"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Postponed: "
                style="@style/TEXT"
                android:textStyle="bold"
                android:textSize="12sp"/>

        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>