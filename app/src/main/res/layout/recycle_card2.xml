<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/container"
        style="@style/BLOCK2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape2"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/anime_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/anime_title"
            style="@style/TEXT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/favorite_add_btn"
            android:layout_toRightOf="@id/anime_image"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/anime_type"
            style="@style/TEXT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/anime_title"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/favorite_add_btn"
            android:layout_toRightOf="@id/anime_image"
            android:gravity="right"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/favorite_add_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/favorite_icon_for_butn" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/anime_image"
            android:layout_marginTop="10dp"
            style="@style/BLOCK1"
            android:layout_below="@id/anime_type"
            android:background="@drawable/shape1">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>